<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<h1 class="title">基本情報編集</h1>
  <div class="body">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: false, method: :patch) do |f| %>
        <%= render 'shared/error_messages', object: @user %>
  
          <%= f.label :employee_number, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :employee_number, class: "form-control" %>

          <%= f.label :department, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :department, class: "form-control" %>

          <%= f.label :job_title, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :job_title, class: "form-control" %>

          <%= f.label :name, class: "label-#{yield(:class_text)}" %>
          <p><%= @user.name %></p>

          <%= f.label :base_pay, class: "label-#{yield(:class_text)}" %>
          <%= f.text_field :base_pay, class: "form-control" %>

          <%= f.label :password, class: "label-#{yield(:class_text)}" %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>

          <div class="center">
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            <%= link_to "キャンセル", users_path, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>