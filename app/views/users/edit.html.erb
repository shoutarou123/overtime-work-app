<% provide(:title, "Edit") %>
<h1>職員情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :employee_number, class: "label-user--edit" %>
      <%= f.text_field :employee_number, class: "form-control" %>

      <%= f.label :department, class: "label-user--edit" %>
      <%= f.text_field :department, class: "form-control" %>

      <%= f.label :job_title, class: "label-user--edit" %>
      <%= f.text_field :job_title, class: "form-control" %>

      <%= f.label :name, class: "label-user--edit" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :base_pay, class: "label-user--edit" %>
      <%= f.text_field :base_pay, class: "form-control" %>

      <%= f.label :password, class: "label-user--edit" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-user--edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-user--edit" %>
    <% end %>
  </div>
</div>