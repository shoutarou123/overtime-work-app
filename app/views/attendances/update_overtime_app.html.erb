<% provide(:class_text, 'update-overtime-app') %>

<%= form_with(model: @user, url: '#', local: true, method: :patch) do |f| %>
  <% @users.each do |user| %>
    <h1 class="title"><%= "#{user.name}の時間外勤務報告"%></h1>

    <div class="body">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-bordered table-condensed">
            <thead>
              <tr class="text-center">
                <td>起案</td>
                <td>日付</td>
                <td>曜日</td>
                <td>当非週</td>
                <td>夜間通信勤務時間</td>
                <td>開始予定時間</td>
                <td>終了予定時間</td>
                <td>勤務内容</td>
              </tr>
            </thead>

            <tbody>
              <% @attendances.where(user_id: user.id).each do |day| %>
                <%= f.fields_for "attendances[]", day do |attendance| %>
                  <tr class="text-center">
                    <td><%= day.planner %></td> <!--起案-->
                    <td><%= l(day.worked_on, format: :short) %></td> <!--日付-->
                    <td><%= $days_of_the_week[day.worked_on.wday] %></td> <!--曜日-->
                    <td><%= day.work_type %></td> <!--当非週-->
                    <td><%= day.communication_work_type %></td> <!--夜間通信勤務時間-->
                    <td><%= l(day.plan_started_at, format: :time) %></td> <!--開始予定時間-->
                    <td><%= l(day.plan_finished_at, format: :time) %></td> <!--終了予定時間-->
                    <td><%= day.work_content %></td> <!--勤務内容-->
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
  <%= f.submit "当番長へ送信する", class: "btn btn-primary btn-md" %>
<% end %>
